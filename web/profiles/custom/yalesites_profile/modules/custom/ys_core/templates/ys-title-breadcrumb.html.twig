{# If page_title_display is not visible #}
{% if 'visible' not in [page_title__display] %}
  {{ attach_library('atomic/page-title') }}
{% endif %}

{% if not breadcrumbs_placeholder %}
  {{ drupal_entity('block', 'yalesitesbreadcrumbs', check_access=false) }}
{% else %}
  {% include '@organisms/menu/breadcrumbs/yds-breadcrumbs.twig' with {
    breadcrumbs__items: breadcrumbs_placeholder
  } %}
{% endif %}

{% include "@molecules/page-title/yds-page-title.twig" with {
  page_title__heading: page_title,
  page_title__display: page_title_display,
  page_title__additional_classes: page_title_display
} %}
