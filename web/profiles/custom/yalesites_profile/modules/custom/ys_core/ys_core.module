/**
 * Prepare validation context for Grand Hero block form.
 *
 * This validation handler ensures that the form stays in modal context
 * during validation errors and properly preserves field group tabs.
 *
 * @param array $form
 *   The form array.
 * @param \Drupal\Core\Form\FormStateInterface $form_state
 *   The form state object.
 */

/**
 * Validation handler for Grand Hero block form.
 */
function ys_core_grand_hero_validate($form, FormStateInterface $form_state) {
  // Validate required fields that are configured in field definitions.
  // Using setErrorByName() to ensure errors are properly associated
  // with field names regardless of form structure.
  // Heading field validation.
  $heading_value = $form_state->getValue(['settings', 'block_form', 'field_heading', 0, 'value']);
  if (empty(trim($heading_value))) {
    $form_state->setErrorByName('settings][block_form][field_heading', t('Heading field is required.'));
  }

  // Media field validation.
  $media_value = $form_state->getValue(['settings', 'block_form', 'field_media']);

  // Check if media has a value in any of the possible formats.
  $has_media = FALSE;
  if (!empty($media_value)) {
    // Media library widget can return selection array.
    if (isset($media_value['selection'])) {
      $has_media = !empty($media_value['selection']);
    }
    // Or standard target_id format.
    elseif (is_array($media_value) && isset($media_value[0]['target_id'])) {
      $has_media = !empty($media_value[0]['target_id']);
    }
    // Or just target_id directly.
    elseif (is_numeric($media_value)) {
      $has_media = TRUE;
    }
  }

  if (!$has_media) {
    $form_state->setErrorByName('settings][block_form][field_media', t('Media field is required.'));
  }

  // Style fields validation.
  $style_color = $form_state->getValue(['settings', 'block_form', 'field_style_color']);
  if (empty($style_color) || (is_array($style_color) && empty($style_color[0]['value']))) {
    $form_state->setErrorByName('settings][block_form][field_style_color', t('Style Color field is required.'));
  }

  $style_position = $form_state->getValue(['settings', 'block_form', 'field_style_position']);
  if (empty($style_position) || (is_array($style_position) && empty($style_position[0]['value']))) {
    $form_state->setErrorByName('settings][block_form][field_style_position', t('Style Position field is required.'));
  }

  $style_variation = $form_state->getValue(['settings', 'block_form', 'field_style_variation']);
  if (empty($style_variation) || (is_array($style_variation) && empty($style_variation[0]['value']))) {
    $form_state->setErrorByName('settings][block_form][field_style_variation', t('Media Size field is required.'));
  }

  $heading_level = $form_state->getValue(['settings', 'block_form', 'field_heading_level']);
  if (empty($heading_level) || (is_array($heading_level) && empty($heading_level[0]['value']))) {
    $form_state->setErrorByName('settings][block_form][field_heading_level', t('Heading Level field is required.'));
  }
}

