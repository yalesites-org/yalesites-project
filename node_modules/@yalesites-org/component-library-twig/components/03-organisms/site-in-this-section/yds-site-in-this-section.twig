 # Available Props:
 # - site_section_wrap__theme
 # - site_section_wrap__border_thickness
 # - site_section_wrap__nav_position
 #
 # Available Variables
 # - site_name
 #
 # Available Blocks
 # - site_section_wrap__primary_nav
 #}

{% set site_section_wrap__base_class = 'in-this-section' %}

{% set icon_left %}
  {% include "@atoms/images/icons/_yds-icon.twig" with {
    icon__name: 'angle-down',
    icon__blockname: site_section_wrap__base_class,
    icon__modifiers: ['left'],
    icon__decorative: true,
  } %}
{% endset %}

{% set icon_right %}
  {% include "@atoms/images/icons/_yds-icon.twig" with {
    icon__name: 'angle-down',
    icon__blockname: site_section_wrap__base_class,
    icon__modifiers: ['right'],
    icon__decorative: true,
  } %}
{% endset %}

{% set site_section_wrap__attributes = {
  'data-secondary-menu-state': 'open',
  'data-component-theme': site_section_wrap__theme|default('one'),
  'data-in-this-section-overflow': 'hidden',
  'data-component-width': 'site',
  class: bem(site_section_wrap__base_class),
} %}

{% set site_section_inner__attributes = {
  'class': bem('inner', [], site_section_wrap__base_class),
  'data-scroll-indicator': 'none',
} %}

<div {{add_attributes(site_section_wrap__attributes)}}>
  <div {{add_attributes(site_section_inner__attributes)}}>
  {% include "@molecules/menu/menu-in-this-section-toggle/yds-menu-in-this-section-toggle.twig" %}

    {% block site_section_wrap__primary_nav %}
      {% include "@organisms/menu/secondary-nav/yds-secondary-nav.twig" with {
        
      }%}
    {% endblock %}
    {% include "@atoms/controls/base/yds-control.twig" with {
      control__content: icon_left,
      control__base_class: 'control',
      control__blockname: site_section_wrap__base_class,
      control__modifiers: ['left'],
      control__attributes: {
        'aria-hidden': 'true',
        'tabindex': '-1',
      },
    } %}
    {% include "@atoms/controls/base/yds-control.twig" with {
      control__content: icon_right,
      control__base_class: 'control',
      control__blockname: site_section_wrap__base_class,
      control__modifiers: ['right'],
      control__attributes: {
        'aria-hidden': 'true',
        'tabindex': '-1',
      },
    } %}
  </div>
</div>
